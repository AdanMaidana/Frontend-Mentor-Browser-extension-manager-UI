---
const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href={`${import.meta.env.BASE_URL}images/favicon-32x32.png`} />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <script>
      const userTheme = localStorage.getItem("theme");
      const systemPrefersDark = window.matchMedia(
        "(prefers-color-scheme: dark)"
      ).matches;

      if (userTheme === "dark" || (!userTheme && systemPrefersDark)) {
        document.documentElement.classList.add("dark");
        localStorage.theme = "dark";
      } else {
        document.documentElement.classList.remove("dark");
        localStorage.theme = "light";
      }
    </script>
  </head>
  <body
    class="bg-[#ebf3fd] dark:bg-[#050b21] transition-colors max-w-[375px] md:max-w-screen-md lg:max-w-screen-lg xl:max-w-screen-xl"
  >
    <slot />
  </body>
</html>

<style>
  @font-face {
    font-family: "Noto Sans";
    src: url("/fonts/NotoSans-VariableFont_wdth,wght.ttf") format("truetype");
  }
  html,
  body {
    margin: 0;
    min-width: 375px;
    font-family: "Noto Sans", sans-serif;
  }

  body {
    padding: 1rem;
    place-items: center;
    margin: 0 auto;
  }
</style>
